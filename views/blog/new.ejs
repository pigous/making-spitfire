<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="stylesheets/contact.css">

<title>New Entry</title>
<div class="container">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Blog entry</h1>
        <div class = "form input">
            <form action = "/blog/new" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "title" placeholder = "title" required>
                </div>
                <div class = "form-group">
                    <label for="body">Put your blog entry here</label>
                    <textarea class="form-control" id="body" name="body" rows="4"></textarea>
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>
            <a href = "/">Go Back</a>
        </div>
    </div>
</div> 
</div>


